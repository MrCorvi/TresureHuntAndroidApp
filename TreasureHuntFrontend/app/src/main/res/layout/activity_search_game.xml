<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".SearchGameActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/joinTitle"
        android:textSize="48sp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="#DDD"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:choiceMode="singleChoice"
            android:listSelector="@color/colorPrimaryDark"/>
    </LinearLayout>

    <Button
        android:id="@+id/joinSubmitGameButton"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:onClick="joinSubmitButtonClick"
        android:text="@string/joinSubmitGameButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/press_btn"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/beige"/>
</LinearLayout>