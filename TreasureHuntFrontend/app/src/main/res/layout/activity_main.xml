<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/default_color">

    <Button
        android:id="@+id/joinButton"
        android:layout_width="300dp"
        android:layout_height="252dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="60dp"
        android:onClick="joinButtonClick"
        app:layout_constraintBottom_toTopOf="@+id/makeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/press_join" />

    <Button
        android:id="@+id/makeButton"
        android:layout_width="300dp"
        android:layout_height="252dp"
        android:layout_marginBottom="68dp"
        android:onClick="makeButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/press_make" />


</androidx.constraintlayout.widget.ConstraintLayout>